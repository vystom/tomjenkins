parameters{
        file name:'client.txt', description:'vloz client.txt'
   }



pipeline {
    agent any
    stages {
        stage('Nacteni souboru') {
            steps {
                script {

                    def inputFile = input message: 'Upload file', parameters: [file(name: 'client.txt')]   



                    def myfile = readFile('client.txt')
                    echo "${myfile}"
                }
            }
        }
    }
}
