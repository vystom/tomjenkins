#!groovy


//body = readFile 'out.html'
body="telo mailu"
body = '<pre>\n' + body + '\n</pre>'
println(body)

SUBJECT=predmetzparvy //predmet zpravy je param v jenkins jako choice


def sendMail() {

subject = SUBJECT
from = 'vystom@centrum.cz'
to = "vystom@centrum.cz, csrychta@gmail.com, cc:vystom1612k@gmail.com"
body = """${body}
        """

        emailext (
            from: from, 
            to: to,
            body: body, 
            subject: subject
        )

}

 

pipeline { 
    agent any
   
    stages {

      stage("priprava neceho") {
          steps { 
            script { 
              echo "ja jsem fiala tralal"
            }
        }
      }     

      stage("posli mail") {
        steps {
          //timeout(time: 5, unit: "MINUTES") {
          script {
            sendMail()
          } 
        }
      } 
    }  
}
  


